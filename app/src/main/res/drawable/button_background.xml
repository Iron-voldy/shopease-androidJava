<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/darker_gray"/> <!-- Color when pressed -->
            <corners android:radius="12dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Normal state (transparent background) -->
            <corners android:radius="12dp"/> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="@android:color/white"/> <!-- White border -->
        </shape>
    </item>
</selector>
