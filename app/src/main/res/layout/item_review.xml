<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Reviewer Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/reviewerImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icons8_user_avatar_100"
            app:shapeAppearanceOverlay="@style/circleImageView"
            app:strokeColor="@color/light_gray"
            app:strokeWidth="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/reviewer_avatar" />

        <!-- Reviewer Name -->
        <TextView
            android:id="@+id/reviewerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/reviewerImage"
            app:layout_constraintTop_toTopOf="@id/reviewerImage"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Review Date -->
        <TextView
            android:id="@+id/reviewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="@id/reviewerName"
            app:layout_constraintTop_toBottomOf="@id/reviewerName" />

        <!-- Review Rating -->
        <RatingBar
            android:id="@+id/reviewRating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reviewerImage"
            android:layout_marginTop="12dp" />

        <!-- Verified Purchase Badge -->
        <TextView
            android:id="@+id/verifiedPurchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verified_purchase"
            android:textSize="12sp"
            android:textColor="@color/success_green"
            android:background="@drawable/verified_purchase_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/reviewRating"
            app:layout_constraintTop_toTopOf="@id/reviewRating"
            app:layout_constraintBottom_toBottomOf="@id/reviewRating" />

        <!-- Review Text -->
        <TextView
            android:id="@+id/reviewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toBottomOf="@id/reviewRating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Review Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/reviewText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/helpfulButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/helpful"
                android:textAllCaps="false"
                app:icon="@drawable/baseline_thumb_up_24"
                app:iconSize="16dp"
                app:iconGravity="textStart"
                app:cornerRadius="18dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/reportButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/report"
                android:textAllCaps="false"
                app:icon="@drawable/baseline_flag_24"
                app:iconSize="16dp"
                app:iconGravity="textStart"
                app:cornerRadius="18dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>